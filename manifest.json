  {
    "name": "Pointless Web Content Swapper",
    "version": "1.1",
    "description": "Click a button to absorb the content from a page (text and/or images), then click another button to replace that content into another page. Art!",
    "permissions": ["activeTab", "scripting", "declarativeContent", "storage", "unlimitedStorage"],
    "background": {
      "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "js": [ "jquery-3.5.1.min.js" ],
             "matches": [ "http://*/*", "https://*/*"]
         }
     ],

    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/logo16.png",
        "32": "images/logo32.png",
        "48": "images/logo48.png",
        "128": "images/logo128.png"
      }
    },
    "icons": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    },

    "manifest_version": 3
  }
